{
    "name": "EtherSprout",
    "version": "0.1.0",
    "description": "",
    "scripts": {
        "chain": "ganache-cli -p 8545 --networkId 50 --db ./db -m \"$MNEMONIC\"",
        "start": "run-s background migrate tail",
        "upload": "sh src/scripts/upload.sh",
        "download": "sh src/scripts/download.sh",
        "migrate": "truffle migrate",
        "background": "chain > logs.txt 2>&1 &",
        "console": "truffle console",
        "tail": "tail -f logs.txt",
        "test-server": "ganache-cli -p 8545 --networkId 50  > test-logs.txt 2>&1 &",
        "test-truffle": "truffle test",
        "truffle": "truffle",
        "test": "run-s test-server test-truffle",
        "clean": "shx rm -rf db/* build/*"
    },
    "license": "MIT",
    "devDependencies": {
        "npm-run-all": "^4.1.2",
        "shx": "^0.2.2"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "ganache-cli": "^6.1.0",
        "truffle": "^4.1.7",
        "truffle-contract": "^3.0.5",
        "web3": "^0.20.0",
        "webpack-cli": "^2.0.15",
        "websocket": "^1.0.25"
    }
}
